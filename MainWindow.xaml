<Window x:Class="Final_Version.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Chat Bot" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- User Details and Task Input -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15" Background="#F5F5F5">
            <Label Content="User Details" FontWeight="Bold" FontSize="14" Foreground="#2C3E50"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                <Label Content="Name:" Width="100" VerticalAlignment="Center" Foreground="#34495E"/>
                <TextBox x:Name="NameTextBox" Width="200" Text="User" Padding="5" BorderBrush="#3498DB" BorderThickness="1"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <Label Content="Favorite Topic:" Width="100" VerticalAlignment="Center" Foreground="#34495E"/>
                <TextBox x:Name="FavoriteTopicTextBox" Width="200" Text="privacy" Padding="5" BorderBrush="#3498DB" BorderThickness="1"/>
            </StackPanel>
            <Button x:Name="SetDetailsButton" Content="Set Details" Width="100" Height="30" Margin="0,10,0,0" 
                    Background="#3498DB" Foreground="White" BorderBrush="Transparent" 
                    Click="SetDetailsButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Chat Display -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15" Background="#ECF0F1" Padding="10">
            <TextBlock x:Name="ChatTextBlock" TextWrapping="Wrap" FontSize="12" Foreground="#2C3E50"/>
        </ScrollViewer>

        <!-- Input and Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Background="#F5F5F5" >
            <TextBox x:Name="InputTextBox" Width="400" Margin="0,0,10,0" Height="30" Padding="5" 
                     BorderBrush="#3498DB" BorderThickness="1" AcceptsReturn="False" KeyDown="InputTextBox_KeyDown"/>
            <Button x:Name="SubmitButton" Content="Submit" Width="100" Height="30" Margin="0,0,10,0" 
                    Background="#2ECC71" Foreground="White" BorderBrush="Transparent" Click="SubmitButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#27AE60"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="ResetButton" Content="Reset" Width="100" Height="30" 
                    Background="#E74C3C" Foreground="White" BorderBrush="Transparent" Click="ResetButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>